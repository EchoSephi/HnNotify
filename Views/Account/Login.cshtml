@model HnNotify.Models.LoginViewModel 
@using (Html.BeginForm("Login","Account", FormMethod.Post, new { enctype = "multipart/form-data", id = "Login", name = "Login" })) {
    @Html.AntiForgeryToken()
    <div class="conn">
        <div class="card">
            <img class="card-img-top" src="~/images/HN_LOGO.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">歡迎使用宏恩醫院通知管理系統</h5>
                <div class="form-group">
                    <label for="Account">帳號</label>
                    @Html.TextBoxFor(x => x.Account , new { placeholder = "請輸入帳號", AutoComplete = "Off", tabindex = "1" ,@class="form-control"} )
                </div>

                <div class="form-group">
                    <label for="Password">密碼</label>
                    @Html.TextBoxFor(x => x.Password, new { type="Password" ,placeholder = "請輸入密碼", AutoComplete = "Off", tabindex = "2" ,@class="form-control"})
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">登入</button>
                </div>

                <div class="form-group">
                    <p class="text-danger text-center">
                        @Html.DisplayFor(x => x.errMsg)
                    </p>
                </div>
            </div>
        </div>
    </div>
}